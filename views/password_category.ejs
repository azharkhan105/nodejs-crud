<%- include('header') %>
<div class="container">
    <div class="row">
        <% if(msg !=''){ %>
            <p style="text-align: center; color: green;"><%= msg %></p>
        <% } %>
        <h1>Password Category Lists</h1>
        <table class="table table-striped table-primary">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Password Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <%if (records.length >0){ %>
                <% i=1 %>
                <% records.forEach(function(row){ %>
                <tr>
                    <td><%= i %></td>
                    <td><%= row.password_category %></td>
                    <td><a class="btn btn-primary btn-xs" href="/passwordCategory/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-xs" href="/passwordCategory/delete/<%= row._id %>" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                <% i++; })}else{ %>
                <tr>
                    <td colspan="3">No Record Found</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include('footer') %>