<%- include('header') %>
<div class="container">
    <div class="row">
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Edit Password Password</div>
                </div>  
                <div class="panel-body" >
                    <form action="/password-detail/edit/<%= recordCat._id %>" id="passwordform" class="form-horizontal" method="post"  role="form">
                        <% if(success !=''){ %>
                            <p style="text-align: center; color: green;"><%= success %></p>
                        <% } %>
                        <div class="form-group">
                            
                            <label for="username" class="col-md-3 control-label">Password Category</label>
                            <div class="col-md-9">
                                <select class="form-control" name="pass_cat">
                                    <option value="">Choose Password Category</option>
                                    <% if(records.length>0){ %>
                                    <% records.forEach(function(record){ %>
                                        <option value="<%= record.password_category %>" <% if(recordCat.password_category == record.password_category){ %>selected <% } %>  >
                                            <%= record.password_category %>
                                        </option>
                                    <% }) } %>
                                </select>
                                <% if(errors!=''){ %>
                                    <p style="color: red;"><%= errors.pass_cat.msg %></p>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Project Name</label>
                            <div class="col-md-9">
                                <input type="textbox" class="form-control" name="project_name"  placeholder="Enter Your Project Name" value="<%= recordCat.project_name %>">
                                <% if(errors!=''){ %>
                                    <p style="color: red;"><%= errors.project_name.msg %></p>
                                <% } %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Password Details</label>
                            <div class="col-md-9">
                                <textarea class="form-control" id="editor" name="pass_details" rows="5" placeholder="Enter Your Password Details"><%= recordCat.password_detail %></textarea>
                                <% if(errors!=''){ %>
                                    <p style="color: red;"><%= errors.pass_details.msg %></p>
                                <% } %>
                            </div>
                        </div>
                        <input type="hidden" name="id" value="<%= recordCat._id %>">

                        
                        <div class="form-group">
                            <!-- Button -->                                        
                            <div class="col-md-offset-3 col-md-9">
                            <input type="submit" name="submit" value="Update Password" class="btn btn-primary">   
                            </div>
                        </div>
                        <p><a href="/view-all-password">View All Password Lists</a></p> 
                    </form>
                </div>
            </div>      
        </div> 
    </div>
</div>
<script>
    CKEDITOR.replace( 'editor' );
</script>
<%- include('footer') %>